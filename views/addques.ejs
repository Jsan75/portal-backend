            <div class="content1">
                    <div style="align-content: left" class="row mt-5">
                            <div style="align-content: left" class="col-md-6 m-auto">
                              <div class="card card-body">
                                  <% include ./partials/messages %>
                                <form action="/users/addquestion" method="POST">
                                  <div class="form-group">
                                    <label for="quetype">Question Type</label>
                                    <select
                                      type="quetype"
                                      id="quetype"
                                      name="quetype"
                                      class="form-control"
                                      size="1"
                                    >
                                    <option value="Multiple Choice Single Answer">Multiple Choice Single Answer</option>
                                    <option value="Multiple Choice Multiple Answer">Multiple Choice Multiple Answer</option>
                                    <option value="Matching">Matching</option>
                                    </select>
                                  </div>
                                  <div class="form-group">
                                    <label for="selectCategory">Select Category</label>
                                    <select
                                      type="selectCategory"
                                      id="selectCategory"
                                      name="selectCategory"
                                      class="form-control"
                                      size="1"
                                    >
                                    <option value="IT">IT</option>
                                    <option value="Aptitude">Aptitude</option>
                                    <option value="General">General</option>
                                    </select>
                                  </div>
                                  <div class="form-group">
                                    <label for="question">Question</label>
                                    <textarea 
                                      id="textarea1"
                                      type="question"
                                      name="textarea1"
                                      class="form-control"></textarea>
                                  </div>
                                  <div class="form-group">
                                      <table>
                                        <tr>
                                          <td>
                                            <label>Options</label>
                                          </td>
                                        </tr>
                                        <tr>
                                          <td>
                                            1) 
                                            <input id="radiobtn" type="radio" value="1" name="score" checked>
                                          </td>
                                          <td>
                                              <textarea 
                                              id="textarea2"
                                              type="option1"
                                              name="textarea2"
                                              class="form-control"></textarea>
                                          </td>
                                        </tr>
                                        <tr>
                                            <td>
                                              2) 
                                              <input id="radiobtn" type="radio" value="2" name="score">
                                            </td>
                                            <td>
                                                <textarea 
                                                id="textarea3"
                                                type="option2"
                                                name="textarea3"
                                                class="form-control"></textarea>
                                            </td>
                                          </tr>
                                          <tr>
                                              <td>
                                                3) 
                                                <input id="radiobtn" type="radio" value="3" name="score">
                                              </td>
                                              <td>
                                                  <textarea 
                                                  id="textarea4"
                                                  type="option3"
                                                  name="textarea4"
                                                  class="form-control"></textarea>
                                              </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                  4) 
                                                  <input id="radiobtn" type="radio" value="4" name="score">
                                                </td>
                                                <td>
                                                    <textarea 
                                                    id="textarea5"
                                                    type="option4"
                                                    name="textarea5"
                                                    class="form-control"></textarea>
                                                </td>
                                              </tr>
                                      </table>
                                    </div>
                                    
                                  <button type="submit" class="btn btn-primary btn-round">
                                    Add
                                  </button>
                                  <a href="/users/questionbank" class="btn btn-primary btn-round">Back</a>
                                </form>
